
<%= form_for character, remote: true do |f| %>
  <% if character.tile.get_moves[0].is_solid === false %>
    <%= f.hidden_field :tile_id, :value => character.tile_id - row_max %>
    <%= f.submit "North" %>
  <% elsif character.tile.transition_tile === 2 %>
    <%= f.hidden_field :room_id, :value => character.room_id  - 1 %>
    <%= f.hidden_field :tile_id, :value => Tile.find_by( room_id: (character.room_id - 1), transition_tile: 1).id %>
    <%= f.submit "North" %>
  <% end %>
<% end %>



