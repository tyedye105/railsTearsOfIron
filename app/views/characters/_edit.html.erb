<% if character.tile.get_moves[0] == false %>
  <%= form_for character, remote: true do |f| %>
  <%= f.hidden_field :tile_id, :value => character.tile_id - row_max%>
  <%= f.submit "North" %>
  <% end %>
<% end %>

<% if character.tile.get_moves[2] == false %>
  <%= form_for character, remote: true  do |f| %>
  <%= f.hidden_field :tile_id, :value => character.tile_id + 1 %>
  <%= f.submit "East" %>
  <% end %>
<% end %>

<% if character.tile.get_moves[3] == false %>
  <%= form_for character,remote: true  do |f| %>
  <%= f.hidden_field :tile_id, :value => character.tile_id - 1 %>
  <%= f.submit "West" %>
  <% end %>
<% end %>

<% if character.tile.get_moves[1] == false %>
  <%= form_for character,remote: true  do |f| %>
  <%= f.hidden_field :tile_id, :value => character.tile_id + row_max%>
  <%= f.submit "South" %>
  <% end %>
<% end %>
