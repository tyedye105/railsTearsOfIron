<h1>You are currently in room no. <%= @room.id %>.</h1>
<h2> THE ROOM OF <%= @room.name %> </h2>
<hr>
<div id="world" style="background-image:'5.png';">
  <div #id="game-controler">
    <% if @room.door_ways.include?("n") %>
    <%= button_to "Go North", room_path(@room.id - 3),method: :get, :id => "north" %>
    <% end %>
    <% if @room.door_ways.include?("w") %>
    <%= button_to "Go West", room_path(@room.id - 1),method: :get, :id => "west" %>
    <% end %>
    <% if @room.door_ways.include?("e") %>
    <%= button_to "Go East", room_path(@room.id + 1),method: :get, :id => "west" %>
    <% end %>
  <% if @room.door_ways.include?("s") %>
  <%= button_to "Go South", room_path(@room.id + 3),method: :get, :id => "south" %>
  <% end %>
  </div>
  <div><%= image_tag "#{@room.id}.png" %><%= image_tag "robo.png", :class =>"robo" %></div>
</div>


<hr>
