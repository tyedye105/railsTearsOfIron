<% if character.tile.transition_tile === 0 && (tile.id + tile.row_max) === character.tile_id %>
  <%= form_for character do |f| %>
  <%= f.hidden_field :room_id, :value => character.room_id - 3 %>
  <%= f.hidden_field :tile_id, :value => Tile.find_by( room_id: (character.room_id - 3), transition_tile: 0).id %>
  <%= button_tag type: 'submit', class: "btn-invis" do%>
      <%= image_tag "arrow_up" %>
    <% end %>
  <% end %>
  <% elsif character.tile.get_moves[0].is_solid === false && (tile.id  + tile.row_max) === character.tile_id %>
    <%= form_for character, remote: true  do |f| %>
    <%= f.hidden_field :tile_id, :value => character.tile_id - tile.row_max %>
    <%= button_tag type: 'submit', class: "btn-invis" do%>
        <%= image_tag "#{tile.tile_name}" %>
      <% end %>
    <% end %>
    <% else %>
  <% end %>

