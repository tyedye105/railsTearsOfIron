<!DOCTYPE html>
<html>
  <head>
    <title>TearsOfIron</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <div id="use_nav" class="navbar navbar-default">
      <div class="container-fluid">
        <div class="nabar-header">
        <%= link_to "Tears of Iron", '/', :class => "navbar-brand" %>
        <% if player_signed_in? %>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">

            <li><%= link_to "Logged in as #{current_player.username}", edit_player_registration_path %></li>
            <li><%= link_to "Log Out", destroy_player_session_path, method: :delete %></li>
            <% else %>

          </ul>
          <ul class="nav navbar-nav">
            <li><%= link_to "Sign up", new_player_registration_path %></li>
            <li><%= link_to "Log in", new_player_session_path %></li>
          </ul>
            <% end %>
          <ul class="nav navbar-nav">

          </div>
        </div>
      </div>
    </div>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
